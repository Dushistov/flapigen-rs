#[derive(Clone, PartialEq, Eq)]
pub struct TestClass {
    i: i32,
}

impl TestClass {
    pub fn new() -> TestClass {
        TestClass { i: 0 }
    }

    pub fn increment(&mut self) {
        self.i += 1;
    }

    pub fn add(&mut self, i: i32) {
        self.i += i;
    }

    pub fn add_ref(&mut self, i: &i32) {
        self.i += *i;
    }

    pub fn maybe_add(&mut self, i: Option<i32>) -> Option<i32> {
        if let Some(i) = i {
            self.i += i;
            Some(self.i)
        } else {
            None
        }
    }

    pub fn print(&self) {
        println!("TestClass::i: {}", self.i)
    }

    pub fn format(&self) -> String {
        format!("TestClass::i: {}", self.i)
    }

    pub fn get(&self) -> i32 {
        self.i
    }

    pub fn get_ref(&self) -> &i32 {
        &self.i
    }
}

#[derive(Clone)]
pub struct TestClass2 {
    t: TestClass,
}

impl TestClass2 {
    pub fn new(t: TestClass) -> TestClass2 {
        Self {
            t
        }
    }
    pub fn try_new(t: TestClass) -> Result<TestClass2, TestError> {
        Ok(Self {
            t
        })
    }
    pub fn opt_new(t: TestClass) -> Option<TestClass2> {
        Some(Self {
            t
        })
    }
    pub fn tuple_new(t: TestClass) -> (TestClass2, i32) {
        (Self {
            t
        }, 1)
    }
    pub fn set_option_ref(&mut self, t: Option<&TestClass>) {
        if let Some(t) = t {
            self.t = t.clone();
        }
    }

    pub fn option_ref(&self) -> Option<&TestClass> {
        Some(&self.t)
    }
}

impl std::ops::Drop for TestClass {
    fn drop(&mut self) {
        println!("Dropping!");
    }
}

